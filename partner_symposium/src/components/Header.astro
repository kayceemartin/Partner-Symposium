---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
---

<header>
  <SkipLinks />
  <Navigation>
    <ul class="menu">
      <li class="menu-item">
        <a href="/">Home</a>
      </li>
      <li class="menu-item has-dropdown">
        <button aria-haspopup="true" aria-expanded="false"></button>
        <ul class="dropdown-menu">
          <li class="submenu-item">
            <a href="/agenda">Agenda</a>
          </li>
          <li class="submenu-item">
            <a href="/guest-speakers/">Guest Speakers</a>
          </li>
        </ul>
      </li>
      <li class="menu-item">
        <a href="/how-to-get-there/"></a>
      </li>
      <li class="menu-item">
        <a href="/venue/"></a>
      </li>
      <li class="menu-item">
        <a href="/faq/">FAQ</a>
      </li>
    </ul>
  </Navigation>
  
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
